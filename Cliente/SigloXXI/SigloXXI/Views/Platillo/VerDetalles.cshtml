
@{
    ViewBag.Title = "VerDetalles";
    var data = (List<SigloXXI.Data.Ingredientes>)ViewData["Detalles"];
}
<link href="~/Content/css/administrador.css" rel="stylesheet" />
<div class="container" style="margin-top: 2%;">
    <h2>Ver Detalles</h2>

    <table class="table table-bordered" style="background-color: white; opacity: 80%;">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var ingrediente in data)
            {
                <tr>
                    <td>@ingrediente.productoId.nombre</td>
                    <td>@ingrediente.cantidad</td>
                </tr>
            }
        </tbody>
    </table>
</div>