@model SigloXXI.Models.ProductoModel

@{
    ViewBag.Title = "AgregarProductos";
}
<link href="~/Content/css/administrador.css" rel="stylesheet" />
<div class="container" style="background-color: white; border: solid 1px black; border-radius: 3px; opacity: 0.8; margin-top: 4%;">

    <h2>Agregar Productos</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                @Html.TextBoxFor(model => model.Nombre, new
                {
                    @class = "form-control",
                    @type = "text",
                    @placeholder = "Ingresar nombre del producto",
                    @title = "Ingresar nombre del producto",
                    @required = true
                })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Descripcion, new
                    {
                        @class = "form-control",
                        @type = "text",
                        @placeholder = "Ingresar la descripcion del producto",
                        @title = "Ingresar la descripcion del producto",
                        @required = true
                    })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Cantidad, new
                    {
                        @class = "form-control",
                        @type = "number",
                        @placeholder = "Ingresar la cantidad del producto en stock",
                        @title = "Ingresar la cantidad del producto en stock",
                        @required = true
                    })
                    @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Precio, new
                    {
                        @class = "form-control",
                        @type = "number",
                        @placeholder = "Ingresar el precio del producto",
                        @title = "Ingresar el precio del producto",
                        @required = true
                    })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="categoria" class="form-control" title="Seleccionar categoria del producto">
                        <option value="Ingrediente">Ingrediente</option>
                        <option value="Insumo">Insumo</option>
                        <option value="Bebestible">Bebestible</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>