
@{
    ViewBag.Title = "VerDetalles";
    var data = (List<SigloXXI.Data.PedidoBody>)ViewData["Detalles"];
}
<link href="~/Content/css/style.css" rel="stylesheet" />
<link href="~/Content/css/administrador.css" rel="stylesheet" />

<div class="container" style="background-color: white; border: solid 1px black; border-radius: 3px; opacity: 0.8; margin-top: 4%;">
    <h2>Ver Detalles</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var pedido in data)
            {
                <tr>
                    <td>@pedido.productoId.nombre</td>
                    <td>@pedido.productoId.precio</td>
                    <td>@pedido.productoId.cantidad</td>
                </tr>
            }
        </tbody>
    </table>
</div>