
@{
    ViewBag.Title = "PlatillosMasConsumidosDelMes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var data = (Dictionary<string, int>)ViewData["platillos"];
}

<link href="~/Content/css/administrador.css" rel="stylesheet" />
<link href="~/Content/css/style.css" rel="stylesheet" />
<link href="~/Content/css/reportes.css" rel="stylesheet" />

<div class="container" style="background-color: white; border: solid 1px black; border-radius: 3px; opacity: 0.8; margin-top: 4%;">
    <h2>Platillos Mas Consumidos Del Mes</h2>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre platillo</th>
                <th scope="col">Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in data)
            {
                <tr class="@(data.Values.Max() == p.Value ? "primer-lugar bg-success": "")">
                    <th class="row">@p.Key</th>
                    <th>@p.Value</th>
                </tr>
            }
        </tbody>
    </table>
</div>


