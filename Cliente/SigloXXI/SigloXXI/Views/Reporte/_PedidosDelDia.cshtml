
@{
    ViewBag.Title = "_PedidosDelDia";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var data = (List<SigloXXI.Data.Documentos>)ViewData["pedidos"];

}

<link href="~/Content/css/administrador.css" rel="stylesheet" />
<link href="~/Content/css/style.css" rel="stylesheet" />

<div class="container" style="background-color: white; border: solid 1px black; border-radius: 3px; opacity: 0.8; margin-top: 4%;">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Codigo</th>
                <th>Fecha</th>
                <th>Proveedor</th>
                <th>Cantidad de productos</th>
                <th>Valor total</th>
                <th>Estado del pedido</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in data)
            {
                foreach (var o in d.pedidoH)
                {
                    <tr>
                        <th scope="col">@d.id</th>
                        <th>@d.hora</th>
                        <th>@o.proveedor.nombre</th>
                        <th>@o.pedidoBId.Count</th>
                        <th>@o.total</th>
                        <th>@o.estado</th>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

