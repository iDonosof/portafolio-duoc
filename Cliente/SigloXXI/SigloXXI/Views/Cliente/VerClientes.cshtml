
@{
    ViewBag.Title = "VerClientes";
    var data = (List<SigloXXI.Data.Clientes>)ViewData["Clientes"];
}
<link href="~/Content/css/administrador.css" rel="stylesheet" />
<div class="container" style="margin-top: 2%;">
    <h2>Listado Clientes</h2>
    <table class="table table-bordered" style="background-color: white; opacity: 80%;">
        <thead>
            <tr>
                <th>Rut</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in data)
            {
                <tr>
                    <td>@cliente.rut-@cliente.dv</td>
                    <td>@cliente.nombre @cliente.apellido</td>
                    <td>@cliente.correo</td>
                    <td>@cliente.telefono</td>
                    <td>
                        @Html.ActionLink(" ", "EditarClientes", "Cliente",
                           new { rut = cliente.rut }, new { @class = "glyphicon glyphicon-edit" })
                        @Html.ActionLink(" ", "EliminarClientes", "Cliente",
                           new { rut = cliente.rut }, new { @class = "glyphicon glyphicon-remove" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

