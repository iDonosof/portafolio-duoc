@model SigloXXI.Models.ReservaModel

@{
    ViewBag.Title = "AgregarReserva";
    var clientes = (List<SigloXXI.Data.Clientes>)ViewData["Clientes"];
    var mesas = (List<SigloXXI.Data.Mesas>)ViewData["Mesas"];
    var error = ViewData["error"].ToString();
}
<link href="~/Content/css/administrador.css" rel="stylesheet" />
<div class="container" style="background-color: white; border: solid 1px black; border-radius: 3px; opacity: 80%; margin-top: 4%;">
    <h2>Agregar Reserva</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.cantidadPersonas, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cantidadPersonas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cantidadPersonas, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="date" name="fecha" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("dd/MM/yyyy")" required />
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <p class="text-danger">@error</p>
                    }
                    @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.hora, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="time" name="hora" class="form-control" value="@DateTime.Now.ToString("HH:mm")" min="@DateTime.Now.ToString("HH:mm")" required />
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <p class="text-danger">@error</p>
                    }
                    @Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label>Cliente</label>
                <div class="col-md-10">
                    <select class="form-control" name="clienteId" required>
                        @foreach (var cli in clientes)
                        {
                            <option value="@cli.rut">@cli.nombre @cli.apellido</option>
                        }
                    </select>
                </div>
            </div>

            @*<div class="form-group">
                    <label>Mesa</label>
                    <div class="col-md-10">
                        <select class="form-control" name="mesaId" required>
                            @foreach (var mesa in mesas)
                            {
                                <option value="@mesa.id">@mesa.numero</option>
                            }
                        </select>
                    </div>
                </div>*@

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

</div>
