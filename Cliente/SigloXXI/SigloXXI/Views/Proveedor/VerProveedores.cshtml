@{
    ViewBag.Title = "VerProveedores";
    var data = (List<SigloXXI.Data.Proveedores>)ViewData["Proveedores"];
    }
    <link href="~/Content/css/administrador.css" rel="stylesheet" />
    <div class="container" style="margin-top: 2%;">
        <h2>Ver Proveedores</h2>
        <table class="table table-bordered" style="background-color: white; opacity: 80%;">
            <thead>
                <tr>
                    <th>Rut</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var proveedor in data)
                {
                <tr>
                    <td>@proveedor.rut</td>
                    <td>@proveedor.nombre</td>
                    <td>@proveedor.correo</td>
                    <td>@proveedor.direccion</td>
                    <td>@proveedor.telefono</td>
                    <td>
                        @Html.ActionLink(" ", "EditarProveedores", "Proveedor",
                        new { rut = proveedor.rut }, new { @class = "glyphicon glyphicon-edit" })
                        @Html.ActionLink(" ", "EliminarProveedores", "Proveedor",
                        new { rut = proveedor.rut }, new { @class = "glyphicon glyphicon-remove" })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
